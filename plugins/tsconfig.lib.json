{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/plugins",
    "declaration": true,
    "types": ["node"],
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@kav-khalsa/ngrx-signal-store": ["./src/index.ts"]
    },
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "ngrx-signals-store/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/files/**/*"
  ]
}